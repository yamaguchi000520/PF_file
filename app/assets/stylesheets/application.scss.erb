.logotitle{
  font-family: serif;
}

.serif{
  font-family: serif;
}

.top-visual{
  width: 100%;
  height: 400px;
  background-image: image-url("top_image.jpg");
  background-position: center;
  background-size: cover;
}

.top-content{
  width: 83%;
  height: 250px;
  text-align: center;
  background-color: rgba(0,0,0,0.7);
  position: absolute;
  top: 10%;
  left: 10%;
}

.top-message{
  color: #FFF;
  font-size: 23px;
}

.about_image{
  background-image: image-url("about.jpg");
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

.about_subtitle{
  font-family: serif;
  font-size: 20px;
}

.hight_max{
  height: 100%;
  padding-bottom: 500px;
}


.pagination>li>a {
  border: none;
  color: #696969;
}

.pagination>.active>a {
  background: #93c9ff;
  border-radius: 15px;
}

.pagination>li>a:hover {
  border-radius: 15px;
}

.message_page{
  margin: auto;
}

.message_area{
  width: 400px;
  background-color: #fffacd;
}

.message_my{
  text-align: right;
}

.message_you{
  text-align: left;
}

@media (min-width: 1000px) and (max-width: 1200px) {
  .customer-name {
    font-size: 13px;
  }
}

@media screen and (min-width: 769px) and (max-width: 1000px) {
  .customer-name {
    display: none;
  }
}

@media (max-width: 1000px) {
  .sidebar {
    display: none;
  }
}

@media (max-width: 687px){
  .top-message{
    font-size: 20px;
  }
}

@media (max-width: 579px){
  .top-message, .top-push{
    font-size: 16px;
  }
}