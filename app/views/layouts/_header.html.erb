<header class="image_tag">
  <% if admin_signed_in? %>
    <nav class="navbar navbar-expand-lg navbar-light bg-warning">
  <% else %>
    <nav class="navbar navbar-expand-md navbar-light bg-dark">
  <% end %>

    <div class="container">
    <%#= link_to root_path do %>
      <%#= image_tag 'al_comi_logo.jpeg', size: "200x50" %>
    <%# end %>
      <p style="font-family: serif;"><%= link_to root_path, class:'btn btn-outline-white bg-dark text-white mr-3' do %>Al-comi<% end %></p>
      <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon bg-white"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">

        <!--ログインしたとき-->
        <% if customer_signed_in? %>
          <p class="text-left text-light ml-5">ようこそ、<%= current_customer.name %>さん！</p>
        <% end %>
        <% if admin_signed_in? %>
          <h3 class="text-left text-dark ml-5">管理者画面</h3>
        <% end %>

        <ul class="navbar-nav ml-auto">
        <!--customerでログインしている時-->
        <% if customer_signed_in? %>
          <li><%= link_to new_sake_path, class:'btn btn-outline-dark bg-warning mr-3 w-100px' do %>新規投稿<% end %></li>
          <li><%= link_to customer_path(current_customer), class:'btn btn-outline-dark bg-white mr-3 w-100px' do %>マイページ<% end %></li>
          <li><%= link_to sakes_path, class:'btn btn-outline-dark bg-white mr-3' do %>お酒一覧<% end %></li>
          <li><%= link_to customers_path, class:'btn btn-outline-dark bg-white mr-3' do %>会員一覧<% end %></li>
          <li><%= link_to destroy_customer_session_path, method: :delete, class:'btn btn-outline-dark bg-white mr-3' do %>ログアウト<% end %></li>
        <!--adminでログインしている時-->
        <% elsif admin_signed_in? %>
          <li><%= link_to admin_homes_about_path, class:'btn btn-outline-dark bg-white mr-3' do %>アバウト<% end %></li>
          <li><%= link_to admin_customers_path, class:'btn btn-outline-dark bg-white mr-3' do %>会員一覧<% end %></li>
          <li><%= link_to admin_sakes_path, class:'btn btn-outline-dark bg-white mr-3' do %>投稿一覧<% end %></li>
          <li><%= link_to admin_genres_path, class:'btn btn-outline-dark bg-white mr-3' do %>ジャンル一覧<% end %></li>
          <li><%= link_to destroy_admin_session_path, method: :delete, class:'btn btn-outline-dark bg-white' do %>ログアウト<% end %></li>
        <!--ログインしていない状態-->
        <% else %>
          <li><%= link_to sakes_path, class:'btn btn-outline-dark  bg-white mr-3' do %>お酒一覧<% end %></li>
          <li><%= link_to about_path, class:'btn btn-outline-dark bg-white mr-3' do %>アバウト<% end %></li>
          <li><%= link_to new_customer_registration_path, class:'btn btn-outline-dark bg-white mr-3' do %>新規登録<% end %></li>
          <li><%= link_to new_customer_session_path,  class:'btn btn-outline-dark text-danger bg-white' do %>ログイン<% end %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>