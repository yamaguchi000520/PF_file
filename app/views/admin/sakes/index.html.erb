<div class="container p-3">
  <div class="row">
    <div class="col-md-3">
      <%#= render "public/sakes/sidebar", sake: @sake %>
      <%#= render "public/sakes/new", sake: @sake %>
    </div>
    <div class="col-md-7 offset-md-1">
      <h2>会員一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% customers.each do |customer| %>
            <tr>
              <td><%#= image_tag customer.get_profile_image, size: '50x50' %></td>
              <td><%= customer.name %></td>
              <td><%= render "public/relationships/followbtn", customer: customer %></td>
              <td><%= link_to "show", customer_path(customer) %></td>
              <td><%= form_with</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>