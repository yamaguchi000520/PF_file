<div class="m-4">
  <div class="row-md">
    <h2>ジャンル一覧・追加</h2>
  </div>

  <div class="row-md mb-3">
    <%= form_with model: [:admin, @genre], url:admin_genres_path, method: :post, local:true do |f| %>
      <div class="form-group row">
        <%= f.label :"ジャンル名：", class: 'col-md-2 text-center mt-3 offset-md-2', style: 'font-size:20px' %>
        <%= f.text_field :name, class: 'mt-3 genre_name', size: 20 %>
        <%= f.submit '新規登録', class: 'btn btn-sm btn-success md-2 ml-5' %>
      </div>
     <% end %>
  </div>

  <div class="row">
    <div class="offset-md-2 col-6 mt-3">
       <table class="table">
        <thead>
          <tr class="table-active">
            <th>ジャンル</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td style="font-size:20px"><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success w-75" %></td>
              <td><%= link_to "削除", admin_genre_path(genre.id), method: :delete, class: "btn btn-sm btn-danger w-100" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>