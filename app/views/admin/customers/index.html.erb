<div class="row">
  <div class="col-7 offset-md-1 py-3">
    <%= render 'public/searches/searchbox' %>
    <h2>会員一覧</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>ニックネーム</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= image_tag customer.get_profile_image(50,50) %></td>
            <td><%= customer.name %></td>
            <td><%= link_to "show", customer_path(customer), class: 'btn btn-success' %></td>
            <td>投稿件数：<%= customer.sakes.count %></td>
            <%= if customer.is_deleted == true %>
              <td>
                ステータス：<p class="text-secondary">退会済み</p>
              </td>
            <% else %>
              <td>
                ステータス：<p class="text-success">有効</p>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>