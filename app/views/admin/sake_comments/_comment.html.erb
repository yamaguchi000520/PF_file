<div id="sake_comments">
  <table class="table table-borderless">
    <thead>
      <tr>
        <th width="30%"></th>
        <th width="40%"></th>
        <th width="20%"></th>
      </tr>
    </thead>
    <% sake.sake_comments.each do |sake_comment| %>
      <tr>
        <td>
          <%= link_to admin_customer_path(sake_comment.customer) do %>
            <%= image_tag sake_comment.customer.get_profile_image(50, 50) %><br>
            <%= sake_comment.customer.name %>|<%= sake_comment.created_at.strftime('%Y/%m/%d') %>
          <% end %>
        </td>
        <td><%= sake_comment.comment %></td>
        <td>
          <%= link_to "削除", admin_sake_sake_comment_path(sake_comment.sake, sake_comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger", remote: true %>
        </td>
      </tr>
    <% end %>
  </table>
</div>