<div class="conteiner mt-4">
  <div class="row-md">
    <h2>ジャンル一覧・追加</h2>
  </div>

  <div class="row-md mb-3">
    <%= form_with model: @home, url:admin_homes_path, method: :post, local:true do |f| %>
      <div class="form-group row">
        <%= f.label :"お酒の種類", class: 'col-md-3 text-center mt-3' %>
        <%= f.text_field :name, class: 'form-control col-md-4 mt-3 home_name' %>
        <%= f.text_area :introduction, class: 'form-control col-md-4 mt-3 home_introduction' %>
        <%= f.submit '新規登録', class: 'btn btn-success md-2 offset-1' %>
      </div>
     <% end %>
  </div>

  <div class="row offset-1">
    <div class="col-11 mt-3">
      <div class="row">
        <div class="col-5">
          <table class="table">
            <thead>
              <tr class="table-active">
                <th>name</th>
                <th>introduction</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
            <% @homes.each do |home| %>
              <tr>
                <td><%= home.name %></td>
                <td><%= home.introduction %></td>
                <td><%= link_to "編集する", edit_admin_home_path(home.id), class: "btn btn-sm btn-success" %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>