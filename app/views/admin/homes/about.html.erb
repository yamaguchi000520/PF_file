<div class="m-4">
  <div class="row-md">
    <h2>アバウト 一覧・追加</h2>
  </div>

  <div class="row-md mb-3">
    <%= form_with model: @home, url:admin_homes_path, method: :post, local:true do |f| %>
      <div class="form-group row">
        <%= f.label :"お酒の種類：", class: 'col-md-2 text-center mt-3 offset-md-1' %>
        <%= f.text_field :name, class: 'form-control col-md-4 mt-3 home_name' %>
      </div>
      <div class="form-group row">
        <%= f.label :"お酒の紹介：", class: 'col-md-2 text-center mt-3 offset-md-1' %>
        <%= f.text_area :introduction, class: 'form-control col-md-6 mt-3 home_introduction', rows: "5" %>
        <%= f.submit '新規登録', class: 'btn btn-success m-2 mt-5' %>
      </div>
    <% end %>
  </div>

  <div class="row offset-md-2">
    <div class="col-md-10 mt-3">
      <table class="table">
        <thead>
          <tr class="table-active">
            <th width="20%">name</th>
            <th width="60%">introduction</th>
            <th width="20%"></th>
          </tr>
        </thead>
        <tbody>
          <% @homes.each do |home| %>
            <tr>
              <td><%= home.name %></td>
              <td><%= home.introduction %></td>
              <td>
                <%= link_to "編集する", edit_admin_home_path(home.id), class: "btn btn-sm btn-success w-100" %><br>
                <%= link_to "削除", admin_home_path(home.id), method: :delete, class: "btn btn-sm btn-danger w-100 mt-3" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>