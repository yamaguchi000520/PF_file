<div class="row mx-5 mt-4 mx-auto justify-content-center">
  <div class="col-md-6 text-left">
    <h4 class = 'mt-4'><strong>ログイン</strong></h4>
  </div>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row mx-5 mt-4 mx-auto justify-content-center">
    <div class="col-7 text-danger">
      <%= render "public/shared/error_messages", resource: resource %>
    </div>
  </div>

  <div class="row mx-5 mt-4 mx-auto justify-content-center">
    <div class="col-md-2">
      <%= f.label :メールアドレス %><br/>
    </div>
    <div class="col-md-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row mx-5 mt-4 mx-auto justify-content-center">
    <div class="col-md-2">
      <%= f.label :パスワード %>
    </div>
    <div class="col-md-3">
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="row mx-5 mt-4 mx-auto justify-content-center">
      <div class="col-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
  <% end %>

  <div class="row mx-5 mt-4 mx-auto justify-content-center">
    <div class="actions col-3">
      <%= f.submit "ログイン", class: "btn btn-success btn-block" %>
    </div>
  </div>
<% end %>

