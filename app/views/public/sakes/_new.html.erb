<%= form_with model:sake, url: sakes_path, method: :post, local: true do |f| %>
  <%= render 'layouts/errors', obj: sake %>
  <div class="form-group">
    <p>画像</p>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.text_field :name, placeholder: "お酒の名前", class: 'form-control sake_name' %>
  </div>
  <div class="form-group">
    <p>ジャンル名</p>
    <%= f.collection_select(genre_id, genre, :id, :name, prompt: "選択してください") %>
  </div>

  <div class="form-group">
    <%= f.text_field :name, placeholder: "お酒の紹介文", class: 'form-control sake_name', rows: "5" %>
  </div>
    <div class="form-group">
    <%= f.submit '投稿', class: 'form-control sake_introduction' %>
  </div>