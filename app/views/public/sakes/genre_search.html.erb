<div class="row d-flex mt-5 ">

    <div class="col-9">
      <div class="d-flex">
        <p style="font-size:35px"><%= @search %>一覧</p>
        <p style="font-size:25px; line-height: 2;">(全<%= @sakes_many.count %>件)</p>
      </div>

      <div class="d-flex flex-wrap items_width">
        <% @sakes.each do |sake| %>
          <div class="mx-3 my-3">
            <%#= link_to sake_path(sake) do %>
              <%#= image_tag sake.get_image, size: "200x160" %>
            <%# end %><br>
            <%= sake.name %><br>
          </div>
        <% end %>
      </div>

      <div class="row justify-content-center my-4">
        <%#= paginate @products, theme: 'bootstrap-5' %>
      </div>
    </div>
</div>