<div class="row px-sm-0 mx-auto">
  <div class="mt-4 ml-2 offset-md-2 col-4 text-center">
    <h4><strong>新規投稿画面</strong></h4>
  </div>
</div>
  <%= form_with model: @sake, url: sakes_path, method: :post, local: true do |f| %>
    <%= render 'layouts/errors', obj: @sake %>
    <div class="row mt-4">
      <div class="col-3 text-center">
         <%= f.label :お酒の画像 %>
      </div>
      <div class="col-4">
        <%= f.file_field :sake_image, accept: "image/*", class: "form-control-file" %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-3 text-center">
        <%= f.label :お酒の名前 %>
      </div>
      <div class="col-4">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-3 text-center">
        <%= f.label :ジャンル名 %>
      </div>
      <div class="col-4">
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください" %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-3 text-center">
        <%= f.label :お酒の紹介 %>
      </div>
      <div class="col-4">
        <%= f.text_area :introduction, class: 'form-control', rows: "5" %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-3 text-center">
        <%= f.label :金額 %>
      </div>
      <div class="col-4">
        <p><%= f.text_field :price, placeholder: "3000", class: 'sake_price', size: 10 %>円程度</p>
      </div>
    </div>

    <div class="row mt-4">
      <div class="actions py-4 col-3 offset-md-1">
        <%= f.submit '投稿', class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>