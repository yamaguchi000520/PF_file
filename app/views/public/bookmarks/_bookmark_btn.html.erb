<div id="bookmark_btn_<%= sake.id %>">
  <% if customer_signed_in? %>
    <% if sake.customer != current_customer %>
      <% if sake.bookmarked_by?(current_customer) %>
        <p>
          <%= link_to sake_bookmarks_path(sake), method: :delete, remote: true, class:"bookmark" do %>
            ★
          <% end %>
        </p>
      <% else %>
        <p>
          <%= link_to sake_bookmarks_path(sake), method: :post, remote: true, class:"bookmark" do %>
            ☆
          <% end %>
        </p>
      <% end %>
    <% else %>
      <i class="fas fa-user"></i>
    <% end %>
  <% else %>
    <p>★</p>
  <% end %>
</div>