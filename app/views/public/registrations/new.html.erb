<div class = 'container'>
  <div class = 'row'>
  <h4 class = 'bg-light mt-4 ml-2 offset-md-2'><strong>新規会員登録</strong></h4>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row mt-4">
      <div class="col-3 text-center">
        <%= f.label :ニックネーム %>
      </div>
      <div class="offset-md-1 col-4">
        <%= f.text_field :name %>
      </div>
    </div>


    <div class="row mt-4">
      <div class="col-3 text-center">
        <%= f.label :メールアドレス %><br/>
      </div>
      <div class="offset-md-1 col-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-4">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <div class="col-4">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-4">
        <%= f.label :確認用パスワード %>
      </div>
      <div class="col-4">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="actions py-4 col-3 offset-md-1">
        <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
      </div>
    </div>
  <% end %>

  <div class="row mt-5">
    <div class="col-4">
      <p style="font-size:21px; text-align:center;">既に登録済みの方は</p>
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <%= render "public/shared/links" %>からログインしてください。
    </div>
  </div>
</div>
