<div class="row">
  <div class="col-md-4 offset-md-3">
    <h4 class = 'mt-4 ml-2 offset-md-2'><strong>新規会員登録</strong></h4>
  </div>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-7 offset-md-2 text-danger">
      <%= render "public/shared/error_messages", resource: resource %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-3 offset-md-3">
      <%= f.label :ニックネーム %>
    </div>
    <div class="col-4">
      <%= f.text_field :name, autofocus: true %>
    </div>
  </div>


  <div class="row mt-4">
    <div class="col-3 offset-md-3">
      <%= f.label :メールアドレス %><br/>
    </div>
    <div class="col-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-3 offset-md-3">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
    </div>
    <div class="col-4">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-3 offset-md-3">
      <%= f.label :確認用パスワード %>
    </div>
    <div class="col-4">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="actions py-4 col-3 offset-md-3">
      <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
    </div>
  </div>
<% end %>

<div class="row mt-5">
  <div class="col-4 offset-md-3">
    <p style="font-size:21px;">既に登録済みの方は</p>
  </div>
</div>

<div class="row">
  <div class="col-6 offset-md-3">
    <%= render "public/shared/links" %>からログインしてください。
  </div>
</div>
<div class="row">
  <div class="col-6 offset-md-3">
    <%= link_to 'ゲストログイン（閲覧用）', public_guest_login_path, class: "btn btn-outline-light bg-dark text-white mr-3 my-3", method: :post %></li>
  </div>
</div>