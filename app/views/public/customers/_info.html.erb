<div>
  <h2>会員情報</h2>
</div>
<table class='table'>
  <tr><%= image_tag customer.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= customer.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= customer.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th>
    <th><%= link_to customer.followings.count, customer_followings_path(customer) %></th>
    </th>
  </tr>
  <tr>
    <th>followers</th>
    <th>
    <th><%= link_to customer.followers.count, customer_followers_path(customer) %></th>
    </th>
  </tr>
</table>

<div class='row'>
  <% if customer_signed_in? && current_customer == customer %>
    <%= link_to edit_customer_path(customer.id), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% else %>
    <%= render "public/relationships/followbtn", customer: customer %>
  <% end %>
</div>