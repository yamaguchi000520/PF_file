<div class="row px-sm-0 mx-auto">
  <div class="mt-4 ml-2 offset-md-2 col-4 text-center">
    <h4><strong>会員情報の変更</strong></h4>
  </div>
</div>
  <%= form_with model: @customer, local: true do |f| %>

    <div class="row mt-4">
      <div class="col-3 text-center">
          <%= f.label :プロフィール画像 %>
      </div>
      <div class="col-4">
        <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file" %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-3 text-center">
        <%= f.label :ニックネーム %>
      </div>
      <div class="col-4">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-3 text-center">
        <%= f.label :自己紹介文 %>
      </div>
      <div class="col-4">
        <%= f.text_area :introduction, class: 'form-control', rows: "5" %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-3 text-center">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col-4">
        <%= f.text_field :email %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="actions py-4 col-3 offset-md-1">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    </div>

  <% end %>
</div>