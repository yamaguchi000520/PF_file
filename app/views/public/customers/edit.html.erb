<div class="row mx-5 mt-4 mx-auto justify-content-center">
  <div class="col-md-6 text-left">
    <h4 class="col-md-12 text-left"><strong>会員情報の変更</strong></h4>
  </div>
</div>

<%= form_with model: @customer, local: true do |f| %>
  <div class="row mt-4 mx-auto justify-content-center">
    <div class="col-3 text-center">
      <%= f.label :プロフィール画像 %>
    </div>
    <div class="col-4">
      <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file" %>
    </div>
  </div>

  <div class="row mx-5 mt-4 mx-auto justify-content-center">
    <div class="col-3 text-center">
      <%= f.label :ニックネーム %>
    </div>
    <div class="col-4">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="row mx-4 mt-4 mx-auto justify-content-center">
    <div class="col-3 text-center">
      <%= f.label :自己紹介文 %>
    </div>
    <div class="col-4">
      <%= f.text_area :introduction, class: 'form-control', rows: "5" %>
    </div>
  </div>

  <div class="row mx-4 mt-4 mx-auto justify-content-center">
    <div class="col-3 text-center">
      <%= f.label :メールアドレス %>
    </div>
    <div class="col-4">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="row mx-5 mt-4 mx-auto justify-content-center">
    <div class="actions py-4 col-5">
      <%= f.submit "編集内容を保存する", class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
<div class="row mx-5 mt-4 mx-auto justify-content-center">
  <div class="actions py-4 col-5">
    <%= link_to "退会する", unsubscribe_path, class: 'btn btn-danger' %>
  </div>
</div>