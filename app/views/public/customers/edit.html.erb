<div class="row px-sm-0 mx-auto">
  <div class="mt-4 ml-2 offset-md-2 col-md-10 text-center">
    <h4 class="col-md-12 text-left"><strong>会員情報の変更</strong></h4>
  </div>
</div>
<%= form_with model: @customer, local: true do |f| %>
  <div class="row mt-4">
    <div class="col-md-3 text-left">
        <%= f.label :プロフィール画像 %>
    </div>
    <div class="col-md-9">
      <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file" %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-3 text-left">
      <%= f.label :ニックネーム %>
    </div>
    <div class="col-md-9">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-3 text-left">
      <%= f.label :自己紹介文 %>
    </div>
    <div class="col-md-5">
      <%= f.text_area :introduction, class: 'form-control', rows: "5" %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-3 text-left">
      <%= f.label :メールアドレス %>
    </div>
    <div class="col-md-9">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="actions py-4 col-md-11 offset-md-1">
      <%= f.submit "編集内容を保存する",class: 'btn btn-secondary' %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="actions py-4 col-md-11 offset-md-1">
      <%= link_to "退会する", unsubscribe_path, class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>