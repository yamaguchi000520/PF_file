<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>ニックネーム</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td><%= image_tag customer.get_profile_image(50,50) %></td>
        <td><%= customer.name %></td>
        <td><%= render "public/relationships/followbtn", customer: customer %></td>
        <td><%= link_to "show", customer_path(customer) %></td>
        <td>投稿件数：<%= customer.sakes.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="row mt-3 mb-5">
  <div class="col-11 offset-md-1 d-flex mx-auto">
    <%= paginate customers, theme: 'twitter-bootstrap-4' %>
  </div>
</div>